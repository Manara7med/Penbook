@model PenBook.Models.Domain.Genre
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Genre</h3>
            <form asp-action="Update"method="post">
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label for="Name"> Name *</label>
                    <input  asp-for="Name" class="form-control"asp-form="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @if(TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
               <div class="form-group pt-3">
                        <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i> Save </button>
                        <a asp-action="GetAll" class="btn btn-primary"><i class="bi bi-list"></i> List </a>
               </div>

            </form>
        </div>
    </div>
</div>